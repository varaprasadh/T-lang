// Function to get all users
pani getAllUsers() {
    sankhya url = buildUrl(baseUrl, usersEndpoint, 0);
    cheppu "ğŸ“‹ Fetching all users...";
    cheppu "GET " + url;
    
    sankhya response = fetch_json(url);
