{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Telugu",
    "scopeName": "source.telugu",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#identifiers"
        },
        {
            "include": "#punctuation"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.telugu",
                    "begin": "//",
                    "end": "$",
                    "captures": {
                        "0": {
                            "name": "punctuation.definition.comment.telugu"
                        }
                    }
                },
                {
                    "name": "comment.block.telugu",
                    "begin": "/\\*",
                    "end": "\\*/",
                    "captures": {
                        "0": {
                            "name": "punctuation.definition.comment.telugu"
                        }
                    }
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.telugu",
                    "match": "\\b(ayite|lekapothe|varaku|prathi|nunchi|aagu|kalugu|tirigi_pampu)\\b"
                },
                {
                    "name": "keyword.declaration.telugu",
                    "match": "\\b(sankhya|pani)\\b"
                },
                {
                    "name": "keyword.other.telugu",
                    "match": "\\b(cheppu|adugu)\\b"
                },
                {
                    "name": "constant.language.telugu",
                    "match": "\\b(nijam|abaddham|sunya)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.telugu",
                    "begin": "\"",
                    "end": "\"",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.telugu"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.end.telugu"
                        }
                    },
                    "patterns": [
                        {
                            "name": "constant.character.escape.telugu",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.decimal.telugu",
                    "match": "\\b\\d+(\\.\\d+)?\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arithmetic.telugu",
                    "match": "[+\\-*/%]"
                },
                {
                    "name": "keyword.operator.comparison.telugu",
                    "match": "(==|!=|<=|>=|<|>)"
                },
                {
                    "name": "keyword.operator.logical.telugu",
                    "match": "\\b(mariyu|leda|kadu)\\b"
                },
                {
                    "name": "keyword.operator.assignment.telugu",
                    "match": "="
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "name": "variable.other.telugu",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "punctuation": {
            "patterns": [
                {
                    "name": "punctuation.terminator.statement.telugu",
                    "match": ";"
                },
                {
                    "name": "punctuation.separator.comma.telugu",
                    "match": ","
                },
                {
                    "name": "punctuation.section.block.begin.telugu",
                    "match": "\\{"
                },
                {
                    "name": "punctuation.section.block.end.telugu",
                    "match": "\\}"
                },
                {
                    "name": "punctuation.section.parens.begin.telugu",
                    "match": "\\("
                },
                {
                    "name": "punctuation.section.parens.end.telugu",
                    "match": "\\)"
                }
            ]
        }
    }
}